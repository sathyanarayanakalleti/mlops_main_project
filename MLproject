name: Project_01

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      learning_rate: {type: float, default: 0.1}
      max_leaf_nodes: {type: int, default: 2}
      n_estimators: {type: int, default: 100}
      max_features: {type: float, default: 0.1}
      max_depth: {type: int, default: 3}
      random_state: {type: int, default: 42}
    command: "python main.py {learning_rate} {max_leaf_nodes} {n_estimators} {max_features} {max_depth} {random_state}"
